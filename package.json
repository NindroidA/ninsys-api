{
  "name": "ninsys-api",
  "version": "1.1.3",
  "description": "API for Nindroid Systems projects",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target bun",
    "start": "bun run dist/server.js",
    "dev": "bun --watch src/server.ts",
    "dev:hot": "bun --hot src/server.ts",
    "typecheck": "tsc --noEmit",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop nindroid-api",
    "pm2:restart": "pm2 restart nindroid-api",
    "pm2:logs": "pm2 logs nindroid-api"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "reflect-metadata": "^0.2.2"
  }
}
